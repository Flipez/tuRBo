.row
  .panel.panel-primary
    .panel-heading
      = I18n.t 'admin.comments.index.heading'
    .panel-body
      %table.table.table-hover
        %thead
          %th.col-md-1
          %th= I18n.t 'admin.comments.index.id'
          %th= I18n.t 'admin.comments.index.text'
        %tbody
          - @comments.each do |comment|
            %tr
              %td
                %i.fa.fa-archive.fa-fw
              %td= comment.id
              %td= comment.text
              %td
                %a.btn.btn-danger{href: "comments/#{comment.id}",
                                  data: { method: :delete, 
                                          confirm: I18n.t('admin.confirm.delete')}}
                  %i.fa.fa-trash-o
