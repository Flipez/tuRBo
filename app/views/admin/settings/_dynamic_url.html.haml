%h4
  = I18n.t 'admin.settings.dynamic_url.title'

.panel.panel-info
  .panel-body
    Example:
    = "current host is: #{request.host}"
.col-md-12
  .col-md-6
    %table.table
      %tr
        %th Url
        %th Title
        %th Subtitle
      - @dynamic_urls.each do |url|
        %tr
          %td= url.url
          %td= url.title
          %td= url.subtitle
  .col-md-6
    = form_for :dynamic_url, url: {controller: 'admin/dynamic_urls', action: :create} do |f|
      .form-group
        = f.label :url
        = f.text_field :url, class: 'form-control'
    
      .form-group
        = f.label :title
        = f.text_field :title, class: 'form-control'
    
      .form-group
        = f.label :subtitle
        = f.text_field :subtitle, class: 'form-control'
    
      = f.submit class: 'form-control'
