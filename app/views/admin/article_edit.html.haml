.row
  .panel.panel-primary
    .panel-heading
      Artikel bearbeiten
    .panel-body
      = form_for :article do |f|
        .form-group
          = f.label :title
          = f.text_field :title, class: 'form-control', maxlength: 25

        .form-group
          = f.label :text
          = f.text_area :text, class: 'form-control wysihtml5',
                               value: @article.text
        .form-group
          = f.label :category
          = f.collection_select :category_id, Category.all,:id,:name, {selected: @article.category.id}

        .form-group
          = f.label :tag_list
          = f.text_field :tag_list, class: 'form-control',
                                    value: @article.tag_list.join(", ")
        
        = f.submit class: 'form-control'
:javascript
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5({'toolbar': {'html': true}});
    });
  })
