.row{style: 'padding-top: 50px'}
  .col-lg-12
    .col-lg-4.col-md-6
      .card.card-inverse.card-info
        .card-block.bg-info
          .rotate
            %i.fa.fa-users.fa-5x
          .text-uppercase
            Registrierte Benutzer
          .display-1
            = @users.count
        .card-footer
          %a{:href => "/admin/users"}
            %span.pull-left Erfahre mehr
            %span.pull-right
              %i.fa.fa-arrow-circle-right
            .clearfix
      .card.card-inverse.card-success
        .card-block.bg-success
          .rotate
            %i.fa.fa-file.fa-5x
          .text-uppercase
            Artikel insgesamt
          .display-1
            = @articles.count
        .card-footer
          %a{:href => "/admin/articles"}
            %span.pull-left Erfahre mehr
            %span.pull-right
              %i.fa.fa-arrow-circle-right
            .clearfix
      .card.card-inverse.card-warning
        .card-block.bg-warning
          .rotate
            %i.fa.fa-archive.fa-5x
          .text-uppercase
            Kategorien insgesamt
          .display-1
            = @categories.count
        .card-footer
          %a{:href => "/admin/categories"}
            %span.pull-left Erfahre mehr
            %span.pull-right
              %i.fa.fa-arrow-circle-right
            .clearfix
    .col-lg-8.col-md-6
      %table.table.table-bordered
        %thead.thead-default
          %tr
            %th &nbsp;
            %th Version
        %tr
          %th
            %i.fa.fa-clock-o
            Uptime
          %td= @uptime
        %tr
          %th
            %i.fa.fa-clock-o
            Last update check
          %td= @last_gem_check || 'No check yet'
        %tr
          %th
            %i.fa.fa-rocket
            tuRBo Version
          %td= Settings.blog.version
        %tr
          %th 
            %i.devicons.devicons-ruby_on_rails
            Rails Version
          %td
            = Rails::VERSION::STRING
            - if @outdated_gems.include? 'rails'
              %span.label.label-danger
                Outdated

        %tr
          %th 
            %i.devicons.devicons-ruby
            Ruby Version
          %td= RUBY_VERSION
        %tr
          %th
            %i.devicons.devicons-ruby_rough
            Loaded Gems
            = "(#{@gems.count})"
          %td
            %button.btn.bt-primary{data: {toggle: :collapse, target: '#gems'}}
              Show Gemlist
              -if @outdated_gems
                %span.badge
                  = @outdated_gems.count
                  outdated gems
            .collapse#gems
              %table.table
                - @gems.sort.each do |gem,version|
                  %tr
                    %th= gem
                    %td=version
                    %td
                      - if @outdated_gems.to_a.include? gem.to_s
                        %span.label.label-danger
                          Outdated
                      - else
                        %span.label.label-success
                          Up to date
