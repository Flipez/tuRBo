.row{style: 'padding-top: 50px'}
  .col-lg-12
    .col-lg-4.col-md-6
      .panel.panel-info
        .panel-heading
          .row
            .col-xs-3
              %i.fa.fa-users.fa-5x
            .col-xs-9.text-right
              .huge
                = @users.count
              %div Registrierte Benutzer
        %a{:href => "/admin/users"}
          .panel-footer
            %span.pull-left Erfahre mehr
            %span.pull-right
              %i.fa.fa-arrow-circle-right
            .clearfix
      .panel.panel-success
        .panel-heading
          .row
            .col-xs-3
              %i.fa.fa-file.fa-5x
            .col-xs-9.text-right
              .huge
                = @articles.count
              %div Artikel insgesamt
        %a{:href => "/admin/articles"}
          .panel-footer
            %span.pull-left Erfahre mehr
            %span.pull-right
              %i.fa.fa-arrow-circle-right
            .clearfix
      .panel.panel-warning
        .panel-heading
          .row
            .col-xs-3
              %i.fa.fa-archive.fa-5x
            .col-xs-9.text-right
              .huge
                = @categories.count
              %div Kategorien insgesamt
        %a{:href => "/admin/categories"}
          .panel-footer
            %span.pull-left Erfahre mehr
            %span.pull-right
              %i.fa.fa-arrow-circle-right
            .clearfix
    .col-lg-4.col-md-6
      %table.table.table-bordered
        %tr
          %th.col-md-2
          %th.col-md-5
        %tr
          %td
            %i.fa.fa-clock-o
            Uptime
          %td= @uptime
        %tr
          %td
            %i.fa.fa-rocket
            tuRBo Version
          %td= Settings.blog.version
        %tr
          %td 
            %i.devicons.devicons-ruby_on_rails
            Rails Version
          %td= Rails::VERSION::STRING
        %tr
          %td 
            %i.devicons.devicons-ruby
            Ruby Version
          %td= RUBY_VERSION
        %tr
          %td
            %i.devicons.devicons-ruby_rough
            Loaded Gems
            = "(#{@gems.count})"
          %td
            %button.btn.bt-info{data: {toggle: :collapse, target: '#gems'}}
              Show Gemlist
            .collapse#gems
              %ul
                - @gems.sort.each do |gem,version|
                  %li
                    %b= gem
                    = "(#{version})"
