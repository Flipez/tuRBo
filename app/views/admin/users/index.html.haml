.row
  .panel.panel-primary
    .panel-heading
      = I18n.t 'admin.settings.users.index.heading'
    .panel-body
      %table.table.table-hover
        %thead
          %th.col-md-1
          %th= I18n.t 'admin.settings.users.index.id'
          %th= I18n.t 'admin.settings.users.index.name'
          %th
        %tbody
          - @users.each do |user|
            %tr
              %td
                %i.fa.fa-user.fa-fw
              %td= user.id
              %td= user.name
              %td
                .btn-group
                  %a.btn.btn-warning{href: "users/#{user.id}/edit"}
                    %i.fa.fa-edit
                  %a.btn.btn-danger{href: "users/#{user.id}",
                                    data: { method: :delete, 
                                            confirm: I18n.t('admin.confirm.delete')}}
                    %i.fa.fa-trash-o
  %a.btn.btn-primary{type: :button, href: 'users/new'}
    = I18n.t 'admin.settings.users.button.new
