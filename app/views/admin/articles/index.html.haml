.row
  .panel.panel-primary
    .panel-heading
      = I18n.t 'admin.articles.index.heading'
    .panel-body
      %table.table.table-hover
        %thead
          %th.col-md-1
          %th= I18n.t 'admin.articles.index.id'
          %th= I18n.t 'admin.articles.index.title'
          %th= I18n.t 'admin.articles.index.date'
          %th= I18n.t 'admin.articles.index.last_change'
          %th

        %tbody
          - @articles.each do |article|
            %tr
              %td
                %i.fa.fa-user.fa-fw
              %td
                %a{href: "articles/#{article.id}"}
                  =article.id
              %td= article.title
              %td= article.created_at
              %td= article.updated_at
              %td
                .btn-group
                  %a.btn.btn-success{href: "/articles/#{article.id}"}
                    %i.fa.fa-eye
                  %a.btn.btn-warning{href: "articles/#{article.id}/edit"}
                    %i.fa.fa-edit
                  %a.btn.btn-danger{href: "articles/#{article.id}",
                                    data: { method: :delete, 
                                            confirm: I18n.t('admin.confirm.delete')}}
                    %i.fa.fa-trash-o

  %a.btn.btn-primary{type: :button, href: 'articles/new'}
    = I18n.t 'admin.articles.button.new'
