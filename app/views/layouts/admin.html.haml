!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= "#{Settings.blog.title} - #{Settings.blog.subtitle}"
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css", :rel => "stylesheet"}/
    %link{:href => "https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %script{:src => "//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"}
    = csrf_meta_tags
  %body{style: 'padding-top:0px'}
    #wrapper
      %nav.navbar.navbar-inverse.navbar-static-top{:role => "navigation", :style => "margin-bottom: 0"}
        .container-fluid
          .navbar-header
            %a.navbar-brand{href: '/'}
              = Settings.blog.title
              %i.fa.fa-rocket.fa-fw
              \- Dashboard
            %ul.nav.navbar-nav
              %li= link_to "Logged in as #{current_user.name}", current_user, method: "get"
              %li= link_to "Log Out", logout_path, method: "delete"
        .navbar-default.sidebar{:role => "navigation"}
          .sidebar-nav.navbar-collapse
            %ul#side-menu.nav
              %li
                %a{:href => "/admin"}
                  %i.fa.fa-home.fa-fw
                  Dashboard home
              %li
                %a{:href => "/admin/articles"}
                  %i.fa.fa-archive.fa-fw
                  Articles
              %li
                %a{:href => "/admin/categories"}
                  %i.fa.fa-archive.fa-fw
                  Categories
              %li
                %a{:href => "/admin/users"}
                  %i.fa.fa-users.fa-fw
                  Users
              %li
                %a{href: '/'}
                  %i.fa.fa-arrow-left.fa-fw
                  Back to Blog
      #page-wrapper{style: 'padding-top: 10px;'}
        - flash.each do |message_type, message|
          %div{class: "alert alert-#{message_type}"}= message
        = yield

